{
  "manifest_version": 3,
  "name": "Hover Debug Overlay",
  "version": "1.1",
  "description": "Show overlay with TOP/LEFT/RIGHT/BOTTOM on element hovered with optional element name",
  "permissions": ["scripting", "activeTab", "storage", "contextMenus", "clipboardWrite"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },  
  "action": {
    "default_title": "Toggle Hover Debug Overlay",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
},
  "background": {
    "service_worker": "background.js"
  }
}


